{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "oc-ng-common-component": {
      "projectType": "library",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "projects/oc-ng-common-component/src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/oc-ng-common-component/tsconfig.lib.json",
            "project": "projects/oc-ng-common-component/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/oc-ng-common-component/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "jestConfig": "projects/oc-ng-common-component/jest.config.js",
            "tsConfig": "projects/oc-ng-common-component/tsconfig.spec.json",
            "setupFile": "projects/oc-ng-common-component/src/test-setup.ts"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/oc-ng-common-component/tsconfig.lib.json",
              "projects/oc-ng-common-component/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "oc-ng-common-component",
  "cli": {
    "analytics": false
  }
}
